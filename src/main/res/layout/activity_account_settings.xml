<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:text="@string/input_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginTop="28dp"
        android:id="@+id/id_ViewName_account"/>

    <TextView
        android:text="@string/input_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_ViewName_account"
        android:layout_alignEnd="@+id/id_ViewName_account"
        android:layout_marginTop="35dp"
        android:id="@+id/id_viewBirthday_account"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="30dp"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_show_name_account"
        android:layout_alignBaseline="@+id/id_ViewName_account"
        android:layout_alignBottom="@+id/id_ViewName_account"
        android:layout_toEndOf="@+id/id_ViewName_account"
        android:layout_marginStart="21dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_show_birthday_account"
        android:layout_alignBaseline="@+id/id_viewBirthday_account"
        android:layout_alignBottom="@+id/id_viewBirthday_account"
        android:layout_alignStart="@+id/id_show_name_account"/>

    <TextView
        android:text="Test: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/id_show_name_account"/>
</RelativeLayout>